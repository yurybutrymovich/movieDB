<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="by.yurybutrymovich.moviedb.app.DetailMovieActivity$PlaceholderFragment">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/posterImageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/movie_poster"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/originalTitleTextView"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/posterImageView"
            android:layout_toEndOf="@+id/posterImageView"
            android:layout_alignParentEnd="false"
            android:paddingLeft="10dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/releaseDateTextView"
            android:layout_below="@+id/originalTitleTextView"
            android:layout_alignParentStart="false"
            android:layout_toEndOf="@+id/posterImageView"
            android:layout_alignParentEnd="false"
            android:paddingLeft="10dp"/>
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/averageVoteCountTextView"
            android:layout_below="@+id/releaseDateTextView"
            android:layout_alignParentStart="false"
            android:layout_toEndOf="@+id/posterImageView"
            android:paddingLeft="10dp"/>/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/voteCountTextView"
            android:layout_below="@+id/averageVoteCountTextView"
            android:layout_alignParentStart="false"
            android:layout_toEndOf="@+id/posterImageView"
            android:paddingLeft="10dp"/>/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/plotTextView"
            android:layout_below="@+id/posterImageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
</RelativeLayout>
